<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="80dp"
    android:background="@drawable/t1"
    android:orientation="vertical"
    android:visibility="visible">

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#d8e9ea"
        >

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/unkown"
            />
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/phone_txt_profile"
                android:layout_marginLeft="30dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/name_txt_profile"
                android:layout_marginLeft="30dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="balance"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/balance_txt_profile"
                android:layout_marginLeft="30dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#000000"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/gender_txt_profile"
                android:layout_marginLeft="30dp" />

        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="birth_date"
                android:textColor="#000000"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/date_txt_profile"

                android:layout_marginLeft="30dp" />

        </TableRow>

    </TableLayout>

</LinearLayout>